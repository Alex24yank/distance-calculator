package org.example;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        var scanner = new Scanner(System.in);

        while(true) {
            System.out.println("What is car speed km/h?");
            var km = scanner.nextDouble();

            System.out.println("Amount of hours?");
            var hours = scanner.nextDouble();

            if (km == 0)
                break;
            if (hours == 0)
                break;

            var result = km * hours;
            System.out.println("Distance " + result);
        }
    }
}
